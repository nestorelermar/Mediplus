<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Style_input">
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">#767272</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="Style_end">
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">#767272</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">113dp</item>
    </style>
    <style name="Style_input_medium">
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">#767272</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="Style_button_con_icono">
        <!--<item name="android:background">@drawable/button</item>-->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">13dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
    <style name="Style_button_sin_icono">
        <!--<item name="android:background">@drawable/button</item>-->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">52dp</item>
    </style>
    <style name="Style_button_medium">
        <!--<item name="android:background">@drawable/button</item>-->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
    <style name="Style_button_float">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">38dp</item>
    </style>
    <style name="Style_bar_superior">
        <item name="android:background">#FEFEFE</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
    </style>
    <style name="Style_bar_inferior">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">#BD2222</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <!-- Añadir esto dentro del archivo styles.xml -->
    <style name="ToggleButtonOptionStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">114dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/toggle_button_text_color</item> <!-- Color del texto según estado -->
        <item name="backgroundTint">@color/rojo</item> <!-- Color de fondo -->
        <item name="android:strokeColor">#CCCCCC</item> <!-- Color del borde no seleccionado -->
        <item name="android:strokeWidth">2</item> <!-- Ancho del borde -->
        <item name="cornerRadius">20dp</item> <!-- Borde redondeado -->
        <item name="android:textAllCaps">false</item>
        <item name="checkedIconTint">#FFFFFF</item> <!-- Color del ícono al estar seleccionado -->
    </style>
    <style name="CardStyle_medium">
        <item name="android:layout_height">122dp</item>
        <item name="android:layout_width">170dp</item>
        <!-- Ajusta el radio de las esquinas -->
        <item name="cardCornerRadius">10dp</item>
        <!-- Define la elevación para sombras -->
        <item name="cardElevation">4dp</item>
        <!-- Color de fondo de la tarjeta -->
        <item name="cardBackgroundColor">#FFFFFF</item>
        <!-- Margen exterior de la tarjeta -->
        <item name="android:layout_margin">8dp</item>
        <!-- Padding interno de la tarjeta -->
        <item name="contentPadding">16dp</item>
        <item name="android:textColor">#626565</item>
    </style>
    <style name="CardStyle_large">
        <item name="android:layout_height">106dp</item>
        <item name="android:layout_width">350dp</item>
        <!-- Ajusta el radio de las esquinas -->
        <item name="cardCornerRadius">10dp</item>
        <!-- Define la elevación para sombras -->
        <item name="cardElevation">4dp</item>
        <!-- Color de fondo de la tarjeta -->
        <item name="cardBackgroundColor">#FFFFFF</item>
        <!-- Margen exterior de la tarjeta -->
        <item name="android:layout_margin">8dp</item>
        <!-- Padding interno de la tarjeta -->
        <item name="contentPadding">16dp</item>
        <item name="android:textColor">#626565</item>
    </style>
    <style name="CardStyle_gray">
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_width">350dp</item>
        <!-- Ajusta el radio de las esquinas -->
        <item name="cardCornerRadius">10dp</item>
        <!-- Color de fondo de la tarjeta -->
        <item name="cardBackgroundColor">#F5F5F5</item>
        <!-- Margen exterior de la tarjeta -->
        <item name="android:layout_margin">8dp</item>
        <!-- Padding interno de la tarjeta -->
        <item name="contentPadding">16dp</item>
        <item name="android:textColor">#626565</item>
    </style>
    <style name="PopupMenuTextStyle" parent="Widget.AppCompat.PopupMenu">
        <!-- Ajusta el tamaño del texto, íconos, etc. -->
        <item name="android:padding">8dp</item> <!-- Reduce el padding -->
        <item name="android:minWidth">80dp</item> <!-- Ajusta el ancho mínimo -->
    </style>
    <style name="datePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#0D1B99</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>

        <!-- Personaliza el botón "Cancelar" -->
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="PositiveButtonStyle" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">#0D1B99</item> <!-- Color del texto del botón OK -->
    </style>

    <!-- Estilo para el botón "Cancelar" -->
    <style name="NegativeButtonStyle" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">#0D1B99</item> <!-- Color del texto del botón Cancelar -->
    </style>
</resources>